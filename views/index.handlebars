<div class="container">
<h1>Eat Da Burger</h1>

<div class = "burger-list">
<div class = "menu">
<h2>What's on the menu</h2>

<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    <li>
        {{this.burger_name}}

        <button class="eat-burger" data-id="{{this.id}}" data-eaten="{{devoured}}">
            DEVOUR
        </button>
    </li>

    {{/unless}}
    {{/each}}
</ul>

</div>

<div class = "menu">
<h2>Yummy all done</h2>

<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    <li>
        {{this.burger_name}}
    </li>
    
    {{/if}}
    {{/each}}
</ul>

</div>
</div>

<h2 class = "add-header">Add a burger</h2>
<div class = "new-burger">


<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burgerInput" name="name">
    </div>

    <button type="submit">Add Burger</button>

</form>
</div>
</div>